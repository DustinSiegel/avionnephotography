---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact Us | Avionne Photography"
  description="Get in touch with Avionne Photography for professional real estate photography services in Northern New Jersey"
>
  <Header />
  
  <main class="py-20 px-6 bg-background min-h-screen">
    <div class="max-w-5xl mx-auto">
      <!-- Header Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-light text-primary mb-4">
          Get In Touch
        </h1>
        <p class="text-xl text-gray-600">
          Ready to showcase your property? We'd love to hear from you.
        </p>
      </div>

      <div class="grid md:grid-cols-5 gap-12">
        <!-- Contact Form - Takes up 3 columns -->
        <div class="md:col-span-3 bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-semibold text-primary mb-6 border-l-4 border-accent pl-4">
            Send Us a Message
          </h2>
          
          <form 
            action="https://formsubmit.co/dustin@avionnephotography.com" 
            method="POST"
            class="space-y-6"
          >
            <!-- Honeypot for spam protection -->
            <input type="text" name="_honey" style="display:none">
            
            <!-- Disable captcha -->
            <input type="hidden" name="_captcha" value="false">
            
            <!-- Success page redirect -->
            <input type="hidden" name="_next" value="https://avionnephotography.com/contact?success=true">
            
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-semibold text-primary mb-2">
                Name *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-accent transition-colors"
                placeholder="Your name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-semibold text-primary mb-2">
                Email *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-accent transition-colors"
                placeholder="your@email.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-semibold text-primary mb-2">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-accent transition-colors"
                placeholder="(123) 456-7890"
              />
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-primary mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                required
                rows="6"
                class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-accent transition-colors resize-none"
                placeholder="Tell us about your property and photography needs..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit"
              class="w-full bg-accent text-primary px-8 py-4 rounded text-lg font-semibold hover:bg-opacity-90 transition-all duration-300 hover:scale-105 shadow-lg"
            >
              Send Message
            </button>
          </form>

          <!-- Success Message -->
          <div id="success-message" class="hidden mt-6 p-4 bg-green-50 border-l-4 border-green-500 text-green-700">
            <p class="font-semibold">Thank you for your message!</p>
            <p class="text-sm">We'll get back to you within 24 hours.</p>
          </div>
        </div>

        <!-- Contact Information - Takes up 2 columns -->
        <div class="md:col-span-2 space-y-6">
          <!-- Direct Contact -->
          <div class="bg-primary text-background rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-6 text-accent">
              Contact Information
            </h2>
            
            <div class="space-y-6">
              <!-- Book Online -->
              <div class="flex items-start gap-3">
                <div class="text-accent text-2xl">üìÖ</div>
                <div>
                  <h3 class="font-semibold mb-1">Book Online</h3>
                  <a 
                    href="https://book.avionnephotography.com" 
                    class="text-accent hover:opacity-80 transition-opacity text-sm break-words"
                  >
                    book.avionnephotography.com
                  </a>
                  <p class="text-xs opacity-80 mt-1">Schedule instantly</p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-3">
                <div class="text-accent text-2xl">‚úâÔ∏è</div>
                <div>
                  <h3 class="font-semibold mb-1">Email</h3>
                  <a 
                    href="" 
                    class="text-accent hover:opacity-80 transition-opacity text-sm break-words"
                  >
                    info@avionnephotography.com
                  </a>
                  <p class="text-xs opacity-80 mt-1">24-hour response time</p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-3">
                <div class="text-accent text-2xl">üì±</div>
                <div>
                    <h3 class="font-semibold mb-1">Phone</h3>
                    <a 
                        href="" 
                        class="text-accent hover:opacity-80 transition-opacity text-sm"
                    >
                        (603)715-7158                  
                    </a>
                  <p class="text-xs opacity-80 mt-1">Mon-Sat, 9am-7pm EST</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h3 class="text-lg font-semibold text-primary mb-4">
              Quick Links
            </h3>
            <ul class="space-y-3">
              <li>
                <a 
                  href="/#services" 
                  class="text-gray-700 hover:text-accent transition-colors flex items-center gap-2"
                >
                  <span class="text-accent">‚Üí</span>
                  View Our Services
                </a>
              </li>
              <li>
                <a 
                  href="/prep-checklist" 
                  class="text-gray-700 hover:text-accent transition-colors flex items-center gap-2"
                >
                  <span class="text-accent">‚Üí</span>
                  Property Preparation Guide
                </a>
              </li>
              <li>
                <a 
                  href="https://download.avionnephotography.com" 
                  class="text-gray-700 hover:text-accent transition-colors flex items-center gap-2"
                >
                  <span class="text-accent">‚Üí</span>
                  Download Your Photos
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-12">
        <a 
          href="/"
          class="text-primary hover:text-accent transition-colors duration-300 font-semibold"
        >
          ‚Üê Back to Home
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  // Show success message if redirected back with success parameter
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('success') === 'true') {
    const successMessage = document.getElementById('success-message');
    if (successMessage) {
      successMessage.classList.remove('hidden');
      successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }
</script>